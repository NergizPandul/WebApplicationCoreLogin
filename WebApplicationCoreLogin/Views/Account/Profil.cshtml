@{
    ViewData["Title"] = "Profile";
}


<div class="row">
    <div class="col-md-4 offset-4">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="row">
<div class="col-md-6">
        <form method="post" action="ProfilResmiKaydet" enctype="multipart/form-data">
          <div class="text-center">
 
          <img src="~/resim/@ViewData["image"]" width="200" class="img-thumbnail rounded-circle"/>
           
            </div>
            <div class="form-group">
                <label class="form-label">Profil Resmi</label>
             <div class="input-group mb-3">
                 <input type="file" class="form-control" name="Resim">
              <button class="btn btn-outline-secondary" type="submit">Kaydet</button>
             </div>
          </div>
        </form>
</div>
<div class="col-md-6">
    <div asp-validation-summary="All"></div>
    <div class="row">
        <div class="col-md-4">
            <form method="post" action="AdSoyadKaydet">
                <div class="form-group">
                    <label class="form-label">Ad Soyad</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Ad Soyad" name="adsoyad" value="@ViewData["adsoyad"]">
                        <button class="btn btn-outline-secondary" type="submit" id="button1">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
        

    <div class="row">
        <div class="col-md-4">
            <form method="post" action="UserNameSave">
                <div class="form-group">
                    <label class="form-label">Kullanıcı Adı</label>
                    <div class="input-group mb-3">
                                <input type="text" class="form-control" placeholder="UserName" name="username" value="@ViewData["adsoyad"]">
                        <button class="btn btn-outline-secondary" type="submit"  id="button2">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <form method="post" action="PaasswordSave">
                <div class="form-group">
                    <label class="form-label">Şifre</label>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Password" name="password" value="@ViewData["adsoyad"]">
                        <button class="btn btn-outline-secondary" type="submit" id="button3">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>

</div>


@section Scripts {
@if(@ViewData["mesaj"]!=null)
{
    <script>
        toastr["success"]("Değişti",Profil bilgileri güncellendi);
      
    </script>
}
}

